<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#EFEFEF"
                android:endColor="#F5F7FA"
                android:angle="135"/>
            <stroke
                android:width="1dp"
                android:color="#E0E0E0"/>
        </shape>
    </item>

    <!-- Decorative diagonal stripe -->
    <item android:top="16dp" android:bottom="16dp">
        <rotate
            android:fromDegrees="-50"
            android:pivotX="-10%"
            android:pivotY="100%">
            <shape android:shape="oval">
                <size android:width="20dp"/>
                <solid android:color="#518EBCD0" android:alpha="0.9"/>
            </shape>
        </rotate>
    </item>

    <item android:top="16dp" android:bottom="16dp">
        <rotate
            android:fromDegrees="-50"
            android:pivotX="140%"
            android:pivotY="30%">
            <shape android:shape="oval">
                <size android:width="20dp"/>
                <solid android:color="#54CFBBEF" android:alpha="0.9"/>
            </shape>
        </rotate>
    </item>
</layer-list>