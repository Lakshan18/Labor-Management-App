<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvLaborName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="center"
        android:text="John Doe"
        android:textColor="#232323"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAttendedDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"
        android:text="Attended Days: 5"
        android:textColor="#232323"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPayoutPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto"
        android:text="Payout Period: Mon-Wed"
        android:textColor="#232323"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNextPayoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:text="Next Payout: Thursday"
        android:textColor="#232323"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvDailyBreakdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:divider="#DDDDDD"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/tvTotalEarnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:gravity="end"
        android:text="Total: â‚¹2500.00"
        android:textColor="#232323"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConfirmSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/roboto"
        android:text="Confirm Salary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C85D5D"
        android:fontFamily="@font/roboto"
        android:text="Close"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>